<style>
	* {
		font-family: "Roboto Light",sans-serif;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	body {
		font-family: 'Roboto Light', cursive;
		margin: 0;
	}

	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		max-width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.subinfo {
		text-align: center;
	}

	.name {
		text-decoration: underline;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		text-decoration: none;
	}

	.instructions {
		margin-bottom: 2rem;
		border: 1mm solid rgb(46, 154, 255);
		background: #222222;
		text-align: center;
		padding: 1.5rem;
		border-radius: 15px;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 4rem;
		padding: 0;
	}

	.avatar_wrap {
		flex: fit-content;
		justify-content: center;
	}

	.avatar {
		padding: 10px;
		border-radius: 1em;
		max-width: 15em;
		border: 1mm solid rgb(46, 154, 255);
	}

	.grid {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		justify-content: space-evenly;
	}

	.friends {
		padding: 1px;
		text-align: center;
		color: #fff;
	}

	.position {
		display: grid;
		place-items: center;
	}
</style>
