---
interface Props {
    title: string;
    body: string;
    href: string;
    img: string;
}

const { href, title, body, img } = Astro.props;
---

<li class="card">
    <a href={href} class="cardA">
        <img
                class="logo"
                id="image"
                src={img}
        />
        <h2>
            <span>--</span>
            {title}
            <span>--</span>
        </h2>
        <p>
            {body}
        </p>
    </a>
</li>
<style>
    .card {
        margin: 1em;
        padding: 1em;
        border-radius: 5px;
        background-color: rgb(161, 113, 12);
        color: white;
        text-align: center;
        overflow: hidden;
        list-style: none;
        display: flex;
        animation: cardBorder 10s infinite linear;
    }

    .card h1,
    .card h2 {
        text-decoration: none;
    }

    .cardA {
        max-width: 100%;
        text-decoration: none;
        color: white;
    }

    .card button {
        background-color: #222222;
        color: #fff;
        border: none;
        padding: 1em;
        border-radius: 1em;
        margin: 1em;
    }

    .card:hover {
        background-color: rgb(213, 150, 34);
        opacity: 0.8;
        transition: background-color 2000ms linear;
    }

    .card .logo {
        border-radius: 1em;
        width: 100%;
        height: auto;
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1 1 auto;
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        text-align: center;
    }

    @keyframes cardBorder {
        0% {
            border: 1mm solid rgb(46, 154, 255);
        }
        25% {
            border: 1mm solid #15F505;
        }
        50% {
            border: 1mm solid #D7DE07;
        }
        75% {
            border: 1mm solid red;
        }
        100% {
            border: 1mm solid rgb(46, 154, 255);
        }
    }
</style>
